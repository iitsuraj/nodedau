<div class="box_general padding_bottom">
        <div class="header_box version_2">
            <h2><i class="fa fa-file-text"></i>Curriculum</h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Professional statement</label>   
                    <textarea rows="5" class="form-control" name="ps" style="height:100px;" placeholder="<%= user.curriculm.professionalstatement %>"><%= user.curriculm.professionalstatement %></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Specialization <a href="#0" data-toggle="tooltip" data-placement="top" title="Separated by commas"><i class="fa fa-fw fa-question-circle"></i></a></label>
                    <% if (user.curriculm.specialization.length > 0) {%>
                        <% for(var i=0; i<user.curriculm.specialization.length; i++) {%>
                                <span class="badge badge-info"><%=user.curriculm.specialization[i].category%> </span>
                        <%}%>
                    <%}%>
                    <input type="text" class="form-control" name="specialization" placeholder="Ex: Piscologist, Pediatrician...">
                </div>
            </div>
        </div>

    </div>